
<div class="container-fluid mt-4">
   
    <% var total = 0; %>
    <form  calss="text-center"style="background-color: #3d388b; color: white">
        <h4 class="text-center mt-2 pt-2">Order Summary</h4>
        <div class="row px-3 mt-2">
            <div class="col-lg-6">
                Sub-total
            </div>
            <div class="col-lg-6">
                <% billinfos[0].forEach((info) => { %>
                    <% total += (info.quantity * info.billPrice)- info.bookPromo%>
                <% }) %>
                <%= total  %> <span class="badge rounded-pill text-bg-secondary">After Promo</span>
            </div>
        </div>
        <div class="row px-3 mt-2">
            <div class="col-6">
                Total
            </div>
            <div class="col-6">
                <%= total %>
            </div>
        </div>
        <div class="row ">
            <div class="col-12 text-center p-2 mt-4">
                <button>Checkout</button>
            </div>
        </div>
    </form>
</div>
