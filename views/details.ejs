<div class="bgcolor">
  <div class="container">
    <% books.forEach(book => { %>
      <form action="/addToBill" method="post">
    <div class="d-flex justify-content-center my-4">
      
        <div class="card mb-3 col-lg-9">
          <div class="row g-0">
            <div class="col-md-3" style="max-height: 300px">
              <img
                src="http://localhost:5001/<%= book.bookCover %>"
                class="img-fluid rounded-start"
                alt="..."
                style="height: 100%; width: 100%"
              />
            </div>
            <div class="col-md-9 card-body">
              <div>
                <p class="text-white">novel</p>
                <h5 class="card-title"><%= book.bookTitle %></h5>

                <div class="card-text d-flex justify-content-between mt-5">
                  <div>
                    <select
                      class="form-select quantity-select"
                      aria-label="Default select example"
                      name="quantity"
                    >

                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                    </select>

                    <!--price-->

                    <p class="mt-4 text-light">
                      ₿<%= book.bookPrice %> &nbsp; ₿<%= book.bookPromo %>
                    </p>

                    <input
                      type="hidden"
                      name="bookId"
                      value="<%= book.bookId %>"
                    />
                    <input
                      type="hidden"
                      name="billPrice"
                      value="<%= book.bookPrice %>"
                    />
                  </div>

                  <!--select box-->
                  <div>
                    <button type="submit" class="cart">ADD TO CART</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>

    <div class="row p-3">
      <div class="col">
        <h3 class="d-title">Book Details</h3>

        <table class="table-borderless transparent-table">
          <tr>
            <th><p>Book title</p></th>
            <td><p><%= book.bookTitle %></p></td>
          </tr>

          <tr>
            <th><p>Author</p></th>
            <td><p><%= book.bookAuthor %></p></td>
          </tr>

          <tr>
            <th><p>Released Date</p></th>
            <td><p><%= book.date %></p></td>
          </tr>

          <tr>
            <th><p>Publisher</p></th>
            <td><p><%= book.publisher %></p></td>
          </tr>

          <tr>
            <th><p>Language</p></th>
            <td><p><%= book.language %></p></td>
          </tr>

          <tr>
            <th><p>Number of pages</p></th>
            <td><p><%= book.pages %></p></td>
          </tr>
        </table>

        <% }) %>
      </div>
      <div class="col">
        <h3 class="d-title">Book Summary</h3>
        <% books.forEach(book => { %>
        <p><%= book.description %></p>
        <% }) %>
      </div>
    </div>

    <div class="row">
      <h3 class="subtitle text-center">Other novels</h3>
      <div class="col">
          <!--image Slider-->
          <div class="home__swiper swiper">
            <div class="swiper-wrapper">
              <article class="home__article swiper-slide">
                <img
                  src="../assets/images/n5.jpg"
                  alt="image"
                  class="home__img"
                />
              </article>
  
              <article class="home__article swiper-slide">
                <img
                  src="../assets/img/CaseClosed.jpg"
                  alt="image"
                  class="home__img"
                />
              </article>
  
              <article class="home__article swiper-slide">
                <img
                  src="../assets/img/DragonBall.jpg"
                  alt="image"
                  class="home__img"
                />
              </article>
  
              <article class="home__article swiper-slide">
                <img
                  src="../assets/img/JujutsuKaisen.jpg"
                  alt="image"
                  class="home__img"
                />
              </article>
            </div>
          </div>
      </div>

    </div>
  </div>
</div>

